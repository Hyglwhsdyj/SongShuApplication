<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/dimen220"
        android:layout_height="@dimen/dimen100"
        android:background="@mipmap/ic_launcher"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/process_loading_view_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen8"
                android:lineSpacingExtra="@dimen/dimen4"
                android:text="@string/qingqiuzhong"
                android:textColor="#FF303030"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>