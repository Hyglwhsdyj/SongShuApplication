<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="@android:color/white">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_product_face"
        android:layout_width="@dimen/dimen50"
        android:layout_height="@dimen/dimen50"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimendip16"
        android:padding="@dimen/dimendip2"
        fresco:roundAsCircle="true"
        fresco:roundBottomLeft="false"
        fresco:roundBottomRight="false"
        fresco:roundWithOverlayColor="@android:color/transparent"
        fresco:roundedCornerRadius="@dimen/dimen5"
        fresco:roundingBorderColor="@android:color/transparent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_product_face"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvw_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimendip10"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize16" />

        <TextView
            android:id="@+id/tvw_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimendip10"
            android:layout_marginTop="@dimen/dimen10"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textSize16" />

    </LinearLayout>




</RelativeLayout>