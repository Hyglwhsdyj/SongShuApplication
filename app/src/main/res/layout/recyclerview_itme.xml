<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/rec_img"
        android:layout_width="@dimen/dimen60"
        android:layout_height="@dimen/dimen60"
        android:background="@mipmap/ic_launcher"

        />
    <TextView
        android:id="@+id/item_re"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shezhi"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginTop="@dimen/dimen13"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize25"
        />

</LinearLayout>
</LinearLayout>