<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:kgc="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    tools:context=".activity.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/dimen5"
        kgc:navigationIcon="@mipmap/ic_launcher"
        kgc:title="登录" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <EditText
        android:id="@+id/name_e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:drawableLeft="@drawable/ic_account_circle_black_18dp"

        />
    <EditText
        android:id="@+id/ped_e1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:drawableLeft="@drawable/ic_https_black_18dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/denglu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            />

    </LinearLayout>


</LinearLayout>
<LinearLayout
    android:layout_width="@dimen/dimen60"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dimen20"
    android:layout_marginTop="@dimen/dimen30"
    >
    <Button
    android:id="@+id/login"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_launcher"
    android:text="登录"/>
    <ImageView
    android:id="@+id/user_logo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <TextView
    android:id="@+id/user_nickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#80505050"
    android:textSize="@dimen/textSize18"
    />

    <TextView
    android:id="@+id/user_openid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        />

</LinearLayout>
</LinearLayout>
